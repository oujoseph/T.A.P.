<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IT&apos;S SIMPLE: WE... TAP ALL THE THINGS."
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/menu_button2"
        android:layout_marginBottom="32dp"
        android:onClick="backTMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap only green boxes! Tapping other color boxes will subtract points from your score."
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Green Box = 10 points"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Red Box = -20 points"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Yellow Box = -50 points"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Orange Box = -75 points"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blue Box = -100 points"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Purple Box = -200 points"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

</RelativeLayout>